# Houston Intelligence Platform Environment Variables
# Copy this file to .env and add your actual values

# Perplexity API Configuration
PERPLEXITY_API_KEY=pplx-your-api-key-here

# Optional: Census API (free with registration)
CENSUS_API_KEY=

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# API Configuration
API_VERSION=v1
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# CORS Configuration
CORS_ORIGINS=http://localhost:*,https://*.houston-intelligence.com

# Railway Configuration (auto-set by Railway)
PORT=5000